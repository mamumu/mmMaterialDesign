<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mumu.mmmaterialdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".md.TextInputLayoutActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.SnackBarActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.SwitchCompatActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.FloatingActionButtonActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.CardViewActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.BottomNavigationViewActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.TabLayoutActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.DrawerLayoutActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".md.NavigationViewActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>